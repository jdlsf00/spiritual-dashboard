# Spiritual Dashboard Environment Configuration
# This file is for local development and testing

# ======================================
# NETWORK CONFIGURATION
# ======================================

# Primary hostname for service discovery
# Uses machine hostname for local network access
REACT_APP_HOST_MACHINE=JeremyX.fios-router.home

# Fallback to IP if hostname resolution fails
REACT_APP_HOST_IP=192.168.1.160

# Service discovery mode: hostname, ip, or auto
REACT_APP_DISCOVERY_MODE=auto

# ======================================
# SERVICE ENDPOINTS
# ======================================

# Core API Gateway (Spiritual Gateway)
REACT_APP_API_GATEWAY_URL=http://JeremyX.fios-router.home:8091

# Direct Service URLs (for failover)
REACT_APP_SPIRITUAL_API_URL=http://JeremyX.fios-router.home:8001
REACT_APP_BOOK_CHAT_API_URL=http://JeremyX.fios-router.home:8002
REACT_APP_TAROT_API_URL=http://JeremyX.fios-router.home:7870
REACT_APP_ASTROLOGY_API_URL=http://JeremyX.fios-router.home:7871
REACT_APP_EBOOK_SERVICE_URL=http://JeremyX.fios-router.home:7872

# ======================================
# PROXY CONFIGURATION
# ======================================

# Enable/disable proxy for development
REACT_APP_USE_PROXY=false

# ======================================
# NETWORK TIMEOUTS
# ======================================

# API timeout in milliseconds
REACT_APP_API_TIMEOUT=45000

# Health check timeout
REACT_APP_HEALTH_CHECK_TIMEOUT=10000

# ======================================
# DEBUGGING
# ======================================

# Enable detailed network logging
REACT_APP_DEBUG_NETWORK=true

# Enable service discovery logging
REACT_APP_DEBUG_DISCOVERY=true
